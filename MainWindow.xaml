<Window x:Class="PalindromeCheckerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Palindrome Checker" Height="300" Width="560">
    <Grid>
        <Label Content="Введіть слово або фразу:" HorizontalAlignment="center" VerticalAlignment="Top" Margin="80"/>
        <TextBox Name="InputTextBox" HorizontalAlignment="center" VerticalAlignment="Top" Margin="1,110,0,0" Width="360"/>
        <Button Content="Перевірити" HorizontalAlignment="center" VerticalAlignment="Top" Margin="1,140,0,0" Width="360" Click="CheckPalindrome"/>
        <Label Name="ResultLabel" HorizontalAlignment="center" VerticalAlignment="Top" Margin="1,170,0,0" Width="360" HorizontalContentAlignment="Center"/>
        <ProgressBar Name="ProgressBar" HorizontalAlignment="center" VerticalAlignment="Top" Margin="1,150,0,0" Width="360" Height="20" Visibility="Collapsed"/>
    </Grid>
</Window>


